<div class="container">
  <p style="color: green"><%= notice %></p>
  <% content_for :title, "Categories" %>
  <h1>Categories</h1>
  <div id="categories">
    <% @categories.each do |category| %>
      <%= render category %>
      <p>
        <%= link_to "Show this category", category %>
      </p>
    <% end %>
  </div>
  <div class="container card m-3">
    <h2>
      <%= link_to "New category", new_category_path %>
    </h2>
  </div>
</div>