<div class="container card">
  <h1>My Personal Blog</h1>
  <p>I am Mohammed Falih. To know more about me: click About me </p>
  <div class="card-actions mb-3">
    <%= link_to 'About me', about_path, class: 'btn btn-secondary' %>
    <%= link_to 'Blog', posts_path, class: 'btn btn-primary' %>
    <%= link_to 'My Products', checkout_path(
      line_items: ['price_1Phmj3Hg7lJ49QoWUh9uJtEO'],
      payment_mode: "payment"), class: 'btn btn-success' %>
    <%= link_to 'Subscribe', checkout_path(
      line_items: ['price_1PhtAkHg7lJ49QoW7qZjrnwi'],
      payment_mode: "subscription"
    ), class: 'btn btn-primary' %>
  </div>
</div>
<% if current_user %>
  <div class="container card mt-4">
    <h2>User Info</h2>
    <h3><%= current_user.full_name %></h3>
    <ul>
      <li><%= current_user.address.street.titleize %></li>
      <li><%= current_user.address.city.titleize %></li>
      <li><%= current_user.address.state.titleize %></li>
      <li><%= current_user.address.zip %></li>
      <li><%= current_user.address.country.titleize %></li>
    </ul>
    <div class="border border-3">
      <li class="px-4">
        <% if @portal_session %>
          <%= link_to 'Manage Billing', @portal_session.url %>
        <% else %>
          No Billing
        <% end %>
      </li>
    </div>
  </div>
<% end %>
