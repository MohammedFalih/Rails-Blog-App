<div class="container">
  <p style="color: green"><%= notice %></p>
  <% content_for :title, "Posts" %>
  <h1>Posts</h1>
  <div id="posts">
    <% @posts.each do |post| %>
      <%= render post %>
      <p>
        <%= link_to "Show this post", post %>
      </p>
    <% end %>
  </div>
  <div class="container card m-5">
    <%= link_to "New post", new_post_path , class: "fs-2 m-3"%>
  </div>
</div>