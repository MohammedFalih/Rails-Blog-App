<div class="container mb-5">
  <h1 class="text-center">Administration</h1>
  <%= render 'admin/nav_links' %>
  <div class="text-center mt-5">
    <div class="btn-group">
      <%= link_to 'Edit', edit_post_path(@post), class: 'btn btn-warning' %>
      <%= button_to "Delete", @post, method: :delete, data: { confirm: "Are you sure? "}, class: "btn btn-danger" %>
    </div>
  </div>
  <div class="row mt-1">
    <p>
      <strong>Title:</strong> <%= @post.title %>
    </p>
    <p>
      <strong>Views:</strong> <%= @post.views %>
    </p>
    <p>
      <strong>Author</strong>
      <%= "#{@post.user.full_name} | #{@post.user.email} | #{pluralize(@post.user.views, "View")}. " %>
    </p>
    <div>
      <strong>Body:</strong>
      <%= @post.body %>
    </div>
    <div class="row mt-2">
      <strong><%= pluralize(@post.comments.count, "Comment") %></strong>
      <% @post.comments.each do |comment| %>
        <div class="row mt-1">
          <strong> <%= comment.user.full_name %></strong>
          <span><%= comment.body %></span>
        </div>
      <% end %>
    </div>
  </div>
</div>