<div class="container">
  <h1 class="text-center">Administration</h1>
  <%= render 'admin/nav_links' %>
  <table class="table table-dark table-striped">
    <thead>
      <tr>
        <th scope="col">id</th>
        <th scope="col">Post</th>
        <th scope="col">Author</th>
        <th scope="col">Comments</th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <th><%= post.id %></th>
          <th><%= link_to post.title.truncate(15), admin_post_path(post) %></th>
          <th><%= post.user.full_name %></th>
          <th><%= pluralize(post.comments.size, "Comment") %></th>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>